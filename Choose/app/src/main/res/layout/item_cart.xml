<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <CheckBox
                android:id="@+id/cart_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_weight="1"
                android:text="CheckBox" />

            <ImageView
                android:id="@+id/cart_image"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_below="@+id/cart_checkBox"
                android:src="@drawable/gift" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="310dp"
            android:layout_height="111dp"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/layout1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cart_title"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="title"
                android:textColor="#111111"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/cart_price"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/cart_title"
                android:layout_marginTop="0dp"
                android:text="price"
                android:textColor="#111111"
                android:textSize="20dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cart_price">
                <Button
                    android:id="@+id/cart_deleteButton"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="delete" />
                <Spinner
                    android:id="@+id/cart_spinner"
                    android:layout_width="100dp"
                    android:layout_height="38dp"
                    android:layout_toRightOf="@id/cart_deleteButton" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>