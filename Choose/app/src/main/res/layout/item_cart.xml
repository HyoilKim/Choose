<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cart_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:checked="true"/>

            <TextView
                android:id="@+id/cart_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cart_checkBox"
                android:padding="5dp"
                android:text="title"
                android:textColor="#111111"
                android:textSize="15dp"
                android:gravity="center"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="310dp"
            android:layout_height="111dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cart_image"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/gift"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/cart_price"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_toRightOf="@+id/cart_image"
                android:text="price"
                android:textColor="#111111"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_toRightOf="@+id/cart_image"
                android:layout_below="@+id/cart_price"
                android:text="description"
                android:textColor="#111111"
                android:textSize="15dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/cart_image"
                android:layout_below="@+id/desc"
                android:paddingBottom="5dp">
                <Button
                    android:id="@+id/cart_deleteButton"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="delete" />

                <Spinner
                    android:id="@+id/cart_spinner"
                    android:layout_width="50dp"
                    android:layout_height="37dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/cart_deleteButton"
                    android:background="@drawable/spinner_background" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>